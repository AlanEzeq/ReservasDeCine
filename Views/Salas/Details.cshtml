@model ReservasDeCine.Models.Sala

@{
    ViewData["Title"] = $"Sala {Model.Numero}";
}

<div>
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Datos de Sala @Model.Numero</h5>

                <hr />

                <dl class="row">
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.Numero)
                    </dt>
                    <dd class="col-sm-5">
                        @Html.DisplayFor(model => model.Numero)
                    </dd>
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.CapacidadButacas)
                    </dt>
                    <dd class="col-sm-5">
                        @Html.DisplayFor(model => model.CapacidadButacas)
                    </dd>
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.TipoSala.Nombre)
                    </dt>
                    <dd class="col-sm-5">
                        @Html.DisplayFor(model => model.TipoSala.Nombre)
                    </dd>
                    </dl>
                <hr />
                <div class="form-group">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">
                        Editar
                    </a>
                    <a asp-action="Index" class="btn btn-danger">
                        Cancelar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
