@model ReservasDeCine.Models.Sala

@{
    ViewData["Title"] = "Alta de Sala";
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Alta de Sala</h5>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Numero" class="control-label"></label>
                        <input asp-for="Numero" class="form-control" />
                        <span asp-validation-for="Numero" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CapacidadButacas" class="control-label"></label>
                        <input asp-for="CapacidadButacas" class="form-control" />
                        <span asp-validation-for="CapacidadButacas" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="TipoSalaId" class="control-label"></label>
                        <select asp-for="TipoSalaId" class="form-control selectpicker" asp-items="ViewBag.TipoSalaId"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Confirmar" class="btn btn-success" />
                        <a asp-action="Index" class="btn btn-danger">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
