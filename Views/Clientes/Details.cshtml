@model ReservasDeCine.Models.Cliente

@{
    ViewData["Title"] = Model.NombreYApellido;
}

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Datos de @Model.NombreYApellido</h5>

                <hr />

                <dl class="row">
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Nombre)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Nombre)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Apellido)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Apellido)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Email)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.DNI)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.DNI)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Telefono)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Telefono)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.FechaAlta)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.FechaAlta)
                    </dd>
                    <dt class="col-sm-6">
                        @Html.DisplayNameFor(model => model.Direccion)
                    </dt>
                    <dd class="col-sm-6">
                        @Html.DisplayFor(model => model.Direccion)
                    </dd>
                </dl>
                <hr />
                <div class="form-group">
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">
                        Editar
                    </a>
                    <a asp-action="Index" class="btn btn-danger">
                        Cancelar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
