@model ReservasDeCine.Models.Pelicula

@{
    ViewData["Title"] = "Delete";
}

<div>
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-body">
                <h3>Quieres eliminar esta película ?</h3>
                <hr />
                <dl class="row">
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.Titulo)
                    </dt>
                    <dd class="col-sm-5">
                        @Html.DisplayFor(model => model.Titulo)
                    </dd>
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.Descripcion)
                    </dt>
                    <dd class="col-sm-5">
                        @Html.DisplayFor(model => model.Descripcion)
                    </dd>
                    <dt class="col-sm-5">
                        @Html.DisplayNameFor(model => model.FechaLanzamiento)
                    </dt>
                    <dd class="col-sm-5">
                        @Html.DisplayFor(model => model.FechaLanzamiento)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index" class="btn btn-info">Vuelta al listado</a>
                </form>
            </div>
        </div>
    </div>
</div>