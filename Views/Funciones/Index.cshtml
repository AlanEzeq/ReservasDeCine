@using ReservasDeCine.Models.Enums
@using System.Security.Claims
@model IEnumerable<ReservasDeCine.Models.Funcion>

@{ ViewData["Title"] = "Funciones"; }

<h1>Funciones</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Crear Función</a>
</p>
<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hora)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ButacasDisponibles)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Confirmada)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pelicula.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sala.Numero)
            </th>
            @if (User.IsInRole(nameof(Rol.Empleado)))
            {
                 <th></th>
            }
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelitem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Fecha)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ButacasDisponibles)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Confirmada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pelicula.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sala.Numero)
            </td>
            @if (User.IsInRole(nameof(Rol.Empleado)))
            {
                <td>
                    <a class="btn btn-outline-primary btn-sm" asp-action="VerReservas" asp-route-id="@item.Id">
                        Ver Reservas
                    </a>
                </td>
            }
            <td>
                <a class="btn btn-outline-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                    Editar
                </a>
            </td>
            <td>
                <a class="btn btn-outline-info btn-sm ml-1" asp-action="Details" asp-route-id="@item.Id">
                    Detalles
                </a>
            </td>
            @if (item.Reserva.Count == 0)
            {
                <td>
                    <a class="btn btn-outline-danger btn-sm ml-1" asp-action="Delete" asp-route-id="@item.Id">
                        Eliminar
                    </a>
                </td>
            }
            else
            {
                <td></td>
            }
            </tr>
        }
    </tbody>
</table>

<!-- AR agregue esto para que se vean las filas en 2 colores, el de boostrap no se nota o no funciona-->
<style>
    .table-striped tbody tr:nth-of-type(odd) {
        background-color: rgba(217, 217, 217, 0.8);
    }

    .table-striped tbody tr:nth-of-type(even) {
        background-color: rgba(128, 128, 128, 0.8);
    }
</style>
