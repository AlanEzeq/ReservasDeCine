@{
    ViewData["Title"] = "Recaudación por pelicula";
}


<div class="row">
    <div class="col-md-6 offset-md-3">
        <h1>@TempData["Titulo"]</h1>
        <div class="card">
            <div class="card-body">
                <hr />
                <dl class="row">
                    <dt class="col-sm-2">
                        Año
                    </dt>
                    <dd class="col-sm-10">
                        @TempData["Ano"]
                    </dd>
                    <dt class="col-sm-2">
                        Mes
                    </dt>
                    <dd class="col-sm-10">
                        @TempData["Mes"]
                    </dd>
                    <dt class="col-sm-2">
                        Total
                    </dt>
                    <dt class="col-sm-10">
                        @TempData["Total"]
                    </dt>
                </dl>

                <div class="form-group">
                    <a asp-action="Index" class="btn btn-danger">
                        Volver
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
    